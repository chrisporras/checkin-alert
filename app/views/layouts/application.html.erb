<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav>
    <% if @signed_in %>
    <ul>
      <li>
        <a href="/edit_user_profile">Edit profile</a>
      </li>
      <li>
        <a href="/user_sign_out">Sign out</a>
      </li>
    </ul>  
    <%else%>
    <ul>
      <li>
        <a href="/user_sign_in">Sign in</a>
      </li>
      <li>
        <a href="/user_sign_up">Sign up</a>
      </li>
    </ul> 
    <%end%>
    </nav>

    <p><%= notice %></p>

    <p><%= alert %></p>

    <%= yield %>
  </body>
</html>
